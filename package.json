{
  "name": "react-native-leader-line-monorepo",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "bootstrap": "yarn install",
    "build": "yarn workspace react-native-leader-line build",
    "dev:lib": "yarn workspace react-native-leader-line dev",
    "dev:lib:verbose": "yarn workspace react-native-leader-line dev:verbose",
    "dev:example": "yarn workspace expo-example start",
    "dev:web": "yarn workspace expo-example web",
    "dev:all": "concurrently \"yarn dev:lib\" \"yarn dev:example\"",
    "dev:web-watch": "concurrently \"yarn dev:lib\" \"yarn dev:web\"",
    "test": "yarn workspace react-native-leader-line test",
    "test:watch": "yarn workspace react-native-leader-line test:watch",
    "test:coverage": "yarn workspace react-native-leader-line test:coverage",
    "lint": "yarn workspace react-native-leader-line lint",
    "lint:fix": "yarn workspace react-native-leader-line lint:fix",
    "expo": "yarn workspace expo-example start",
    "test:deploy": "./test-deploy.sh",
    "check:deploy": "./pre-deploy-check.sh",
    "serve:local": "cd apps/expo-example/dist && npx serve . -p 3000"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
